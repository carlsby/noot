{
  "name": "todo",
  "version": "1.0.0",
  "description": "",
  "main": "main/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm:start-electron\" \"npm:start-react\"",
    "start-electron": "wait-on tcp:5173 && electron .",
    "start-react": "cross-env PORT=5173 npm --prefix frontend run dev",
    "build-react": "npm --prefix frontend run build",
    "build": "npm run build-react",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourname.todo",
    "productName": "Todo",
    "files": [
      "main/**/*",
      "frontend/build/**/*",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "data/",
        "to": "data",
        "filter": ["**/*"]
      },
      {
        "from": "logs/",
        "to": "logs",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "nedb": "^1.8.0",
    "winston": "^3.17.0"
  }
}
